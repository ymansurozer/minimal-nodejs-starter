{
  "name": "minimal-nodejs-starter",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --env-file=.env --enable-source-maps --watch dist/src/index.js",
    "dev": "pnpm run \"/dev:/\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [],
  "author": "",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^20.4.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  },
  "engines": {
    "node": "20.x"
  }
}
